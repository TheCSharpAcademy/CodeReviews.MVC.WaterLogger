@page
@model MVC.RecipeLogger.Pages.Recipes.DeleteModel

@{
    ViewData["Title"] = "Delete a recipe";
}

<h1>Delete</h1>
<hr />

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Instructions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Instructions)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Ingredients)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var item in Model.Recipe.Ingredients)
                {
                    <li>@item.Amount @item.Measure @item.Name</li>
                    if (!string.IsNullOrEmpty(item.Comment))
                    {
                        <small><i>*@item.Comment</i></small>
                    }
                }
            </ul>
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Recipe.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
