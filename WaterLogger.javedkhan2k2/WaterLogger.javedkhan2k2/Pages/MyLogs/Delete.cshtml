@page
@model WaterLogger.Pages.MyLogs.DeleteModel
@{
    
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <!-- Card to show record details -->
            <div class="card">
                <div class="card-header bg-primary bg-gradient">
                    Confirm Deletion
                </div>
                <div class="card-body bg-light bg-gradient">
                    <h5 class="card-title">Are you sure you want to delete this record?</h5>
                    <div class="row p-2">
                        <div class="col-4"><strong>ID</strong></div>
                        <div class="col-6"><span>@Model.MyLog.Id</span></div>
                    </div>
                    <div class="row p-2">
                        <div class="col-4"><strong>Date</strong></div>
                        <div class="col-6"><span>@Model.MyLog.Date.ToString("dd-MM-yyyy")</span></div>
                    </div>
                    <div class="row p-2">
                        <div class="col-4"><strong>Quantity</strong></div>
                        <div class="col-6"><span>@Model.MyLog.Quantity</span></div>
                    </div>
                    <div class="row p-2">
                        <div class="col-4"><strong>Habit</strong></div>
                        <div class="col-6"><span>@Model.MyLog.Habit.HabitName</span></div>
                    </div>
                    <div class="row p-2">
                        <div class="col-4"><strong>Habit Unit</strong></div>
                        <div class="col-6"><span>@Model.MyLog.Habit.HabitUnit.Unit</span></div>
                    </div>
                    <div class="d-flex justify-content-end mt-2">
                        <form method="post">
                            <input type="hidden" asp-for="MyLog.Id">
                            <a button type="button" class="btn btn-primary" asp-page="/MyLogs/Index">Go back</a>
                            <input type="submit" value="Delete" class="btn btn-danger">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>