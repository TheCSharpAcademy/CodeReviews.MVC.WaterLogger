@page
@model WaterLogger.Pages.HabitUnits.CreateModel
@{

}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header bg-primary bg-gradient">
                    Add Habit Unit
                </div>
                <div class="card-body bg-light bg-gradient">
                    <form method="post">
                        <div class="form-floating mb-2 row">
                            <input type="text" class="form-control form-control-sm" asp-for="HabitUnit.Unit"
                                placeholder="Unit">
                            <label asp-for="HabitUnit.Unit"></label>
                            <span asp-validation-for="HabitUnit.Unit" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <input type="submit" value="Add" class="btn btn-primary">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>