@using ReadToKidsTracker
@model ReadSessionView


@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<a class="btn btn-outline-warning mt-3 mb-3" asp-controller="Home" asp-action="Index">Back to Session List</a>

    <h2>Add a New Session</h2>

    <form class="pb-3" asp-action="AddSession" asp-controller="Home" method="post" >
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group pb-3 w-25">
            <label>Date</label>
            <input asp-for="Date" type="date" class="form-control" />
        </div>
        <div class="form-group pb-3 w-100">
            <label>BookName</label>
            <input asp-for="BookName" class="form-control" />
        </div>
        <div class="form-group pb-3 w-25">
            <label>StartPage</label>
            <input id="startPage" asp-for="StartPage" class="form-control" type="number"/>
        </div>
        <div class="form-group pb-3 w-25">
            <label>EndPage</label>
        <input id="endPage" asp-for="EndPage" class="form-control" type="number" />
        </div>
        <div class="form-group pb-3 w-25 d-none">
            <label>TotalPages</label>
            <input id="totalPages" asp-for="TotalPages" value="0" class="form-control" />
        </div>
        <div class="form-group pb-3 w-25">
            <label>Duration</label>
            <input asp-for="Duration" class="form-control"/>
        </div>

        <div class="form-group pb-3 w-25">
            <label>Comments</label>
            <input asp-for="Comments" class="form-control" />
        </div>

        <input type="submit" class="btn btn-success" value="Add Session" />
    </form>

